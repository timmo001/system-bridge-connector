{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Media Files",
  "properties": {
    "files": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "description": "Media File",
          "properties": {
            "name": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "size": {
              "type": "integer"
            },
            "isDirectory": {
              "type": "boolean"
            },
            "modTime": {
              "type": "number"
            },
            "permissions": {
              "type": "string"
            },
            "contentType": {
              "type": "string"
            },
            "extension": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "path",
            "size",
            "isDirectory",
            "modTime",
            "permissions"
          ]
        }
      ]
    },
    "path": {
      "type": "string"
    }
  },
  "required": ["files", "path"]
}
